{
  "name": "mathup",
  "version": "1.0.0-alpha.1",
  "description": "Easy MathML authoring tool with a quick to write syntax",
  "keywords": [
    "mathml",
    "markup",
    "math",
    "authoring"
  ],
  "homepage": "https://runarberg.github.io/mathup/",
  "bugs": "https://github.com/runarberg/mathup/issues",
  "license": "MIT",
  "author": "Rúnar Berg Baugsson Sigríðarson <runarberg@zoho.com>",
  "main": "target/node/mathup.cjs",
  "module": "src/index.mjs",
  "bin": {
    "mathup": "bin/mathup.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/runarberg/mathup.git"
  },
  "scripts": {
    "clean": "rm -fr .nyc_output dependencies.mjs coverage/ target/",
    "demo": "node demo/server.mjs",
    "dependencies": "rollup --config --configDeps",
    "lint": "eslint --ext .js --ext .mjs --ext .cjs src/ test/ *.config.js *.src.mjs",
    "build": "rollup --config",
    "predemo": "npm run dependencies",
    "prepare": "npm run build",
    "test": "nyc ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "12"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": false
    },
    "parserOptions": {
      "ecmaVersion": "2019",
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "plugin:ava/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    }
  },
  "nyc": {
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "include": [
      "src/**/*.mjs"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/register": "^7.7.7",
    "@babel/runtime": "^7.7.7",
    "@rollup/plugin-commonjs": "^11.0.0",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "ava": "^2.4.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-ava": "^9.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "expect.js": "^0.3.1",
    "nyc": "^15.0.0",
    "prettier": "1.19.1",
    "rollup": "^1.27.14",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-terser": "^5.1.3"
  },
  "dependencies": {
    "minimist": "^1.2.0",
    "unicode-properties": "^1.3.1"
  }
}
